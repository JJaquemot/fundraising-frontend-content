{
    "name": "wmde/fundraising-frontend-content",
    "description": "i18n for FundraisingFrontend",
    "license": "GPL-2.0+",
    "require-dev": {
        "wmde/fundraising-html-filter": "dev-master",
        "seld/jsonlint": "^1.6"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/wmde/fundraising-html-filter"
        }
    ],
    "scripts": {
        "ci": [
            "@test"
        ],
        "test": [
            "composer validate --no-interaction",
            "find i18n/ -type f -name \\*.json -exec echo \"{}\" \\; -exec vendor/bin/jsonlint {} \\;",
            "find resources/ resources/ -type f -name \\*.twig -exec vendor/bin/twiglint {} \\;"
        ]
    }
}
